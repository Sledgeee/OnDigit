                                  Duration="00:00:01"
                                  Stretch="Uniform" StrokeThickness="2"
                                  Stroke="Orange"
                                  HorizontalAlignment="Center" VerticalAlignment="Center"
                                  Height="150"
                                  PathLength="150"
                                  x:Name="LoadingAnimation"
                                  Grid.Column="1"
                                  Visibility="Collapsed"/>
    </Grid>
</hc:Window>
