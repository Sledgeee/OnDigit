<Window x:Class="OnDigit.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:OnDigit.Client"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Icon="/Images/logo.png"
        Title="Shop" Width="1725" Height="950"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{x:Null}"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Storyboard x:Key="OpenMenu">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" Storyboard.TargetName="GridMenu">
                <EasingDoubleKeyFrame KeyTime="0" Value="70"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="200"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="CloseMenu">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" Storyboard.TargetName="GridMenu">
                <EasingDoubleKeyFrame KeyTime="0" Value="200"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="70"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="ButtonOpenMenu">
            <BeginStoryboard Storyboard="{StaticResource OpenMenu}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="ButtonCloseMenu">
            <BeginStoryboard Storyboard="{StaticResource CloseMenu}"/>
        </EventTrigger>
    </Window.Triggers>

    <Grid Background="#121212" Height="835" Width="1525" Visibility="Visible">
        <Grid.Effect>
            <DropShadowEffect Color="#121212" ShadowDepth="1"/>
        </Grid.Effect>

        <!-- Shop panel -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <WrapPanel x:Name="ShopMain" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="130 70 45 0"/>
        </ScrollViewer>
        <!-- End shop panel -->
        
        <fa:ImageAwesome Icon="CircleOutlineNotch" x:Name="SpinnerBooks_1" SpinDuration="1" Height="90" Width="90" Margin="50 10 0 0" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Orange" Visibility="Collapsed"/>
        <fa:ImageAwesome Icon="CircleOutlineNotch" x:Name="SpinnerBooks_2" SpinDuration="2" Height="50" Width="50" Margin="50 10 0 0" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Orange" Visibility="Collapsed"/>
        <fa:ImageAwesome Icon="CircleOutlineNotch" x:Name="SpinnerBooks_3" SpinDuration="3" Height="20" Width="20" Margin="50 10 0 0" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Orange" Visibility="Collapsed"/>

        <Grid Height="25" VerticalAlignment="Top" Background="#212121" Panel.ZIndex="1" Margin="0,-24,0,0">
            <Grid.Effect>
                <DropShadowEffect Color="#121212" ShadowDepth="0"/>
            </Grid.Effect>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Height="25">
                <Button Style="{StaticResource ResourceKey=MaterialDesignFlatButton}" Height="25" Click="Minimize_Click">
                    <materialDesign:PackIcon Kind="WindowMinimize" Foreground="White" Width="25" Height="16" HorizontalAlignment="Center"/>
                </Button>
                <Button Style="{StaticResource ResourceKey=MaterialDesignFlatButton}" Height="25" Click="ShutdownApp_Click">
                    <materialDesign:PackIcon Kind="Close" Foreground="White"/>
                </Button>
            </StackPanel>
        </Grid>
        <Grid Height="60" VerticalAlignment="Top" Background="#242424">
            <Grid.Effect>
                <DropShadowEffect Color="#121212" ShadowDepth="0"/>
            </Grid.Effect>
            <fa:ImageAwesome Icon="CircleOutlineNotch" x:Name="SpinnerSession_1" Spin="True" SpinDuration="1" Height="34" Width="34" Margin="0 0 43 0" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="Orange"/>
            <fa:ImageAwesome Icon="CircleOutlineNotch" x:Name="SpinnerSession_2" Spin="True" SpinDuration="2" Height="20" Width="20" Margin="0 0 50 0" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="Orange"/>
            <fa:ImageAwesome Icon="CircleOutlineNotch" x:Name="SpinnerSession_3" Spin="True" SpinDuration="3" Height="10" Width="10" Margin="0 0 55 0" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="Orange"/>

            <StackPanel x:Name="UnloginedState" Orientation="Horizontal" HorizontalAlignment="Right" Visibility="Hidden">
                <Button Content="Sign in" FontSize="16" Margin="0 0 10 0" Style="{StaticResource MaterialDesignFlatMidBgButton}" materialDesign:ButtonAssist.CornerRadius="5"
                        Click="SignInDialog_Click"/>
                <Button Content="Sign up" FontSize="16" Margin="0 0 20 0" Style="{StaticResource MaterialDesignFlatButton}" materialDesign:ButtonAssist.CornerRadius="5"
                        Click="SignUpDialog_Click"/>
            </StackPanel>
            <StackPanel x:Name="LoginedState" Orientation="Horizontal" HorizontalAlignment="Right" Visibility="Hidden">
                <TextBlock x:Name="UserFullname" VerticalAlignment="Center" Margin="0 0 0 3" FontSize="21" Foreground="White"/>
                <materialDesign:PopupBox PlacementMode="BottomAndAlignRightEdges" StaysOpen="False" Margin="10" Foreground="White">
                    <StackPanel Width="150">
                        <Button Content="Profile" FontSize="16"/>
                        <Button Content="Settings" FontSize="16"/>
                        <Button Content="Get Feedback" FontSize="16"/>
                        <Separator/>
                        <Button Content="Logout" Click="Logout_Click" FontSize="16"/>
                    </StackPanel>
                </materialDesign:PopupBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="450 0 0 0">
                <TextBox x:Name="SearchBox" FontSize="16" Width="600" Height="32" TextAlignment="Left" Padding="15 5 0 0" Foreground="Black" Background="White" materialDesign:HintAssist.Hint="Search..." VerticalAlignment="Center" HorizontalAlignment="Center"  Style="{StaticResource MaterialDesignTextBox}"/>
                <Button x:Name="ActivateSearch" FontSize="16" Content="Search" materialDesign:ShadowAssist.ShadowDepth="Depth0" materialDesign:ButtonAssist.CornerRadius="0 10 10 0" Style="{StaticResource MaterialDesignFlatMidBgButton}" Click="ActivateSearch_Click"/>
            </StackPanel>
        </Grid>
        <Grid x:Name="GridMenu" Width="70" HorizontalAlignment="Left" Background="#242424">
            <Grid.Effect>
                <DropShadowEffect Color="#121212" ShadowDepth="0"/>
            </Grid.Effect>
            <StackPanel>
                <Grid Height="61" Background="#242424" RenderTransformOrigin="0.5,0.5">
                    <Grid.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Grid.RenderTransform>
                    <Button x:Name="ButtonOpenMenu" Height="61" Width="70" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Background="{x:Null}" BorderBrush="{x:Null}" Click="ButtonOpenMenu_Click">
                        <materialDesign:PackIcon Kind="Menu" Width="30" Height="30" Foreground="White"/>
                    </Button>
                    <Button x:Name="ButtonCloseMenu" Visibility="Collapsed" Height="60" Width="60" HorizontalAlignment="Right" VerticalAlignment="Top" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Background="{x:Null}" BorderBrush="{x:Null}" Click="ButtonCloseMenu_Click">
                        <materialDesign:PackIcon Kind="ArrowLeft" Width="30" Height="30" Foreground="White"/>
                    </Button>
                </Grid>
                <ListView x:Name="ListViewMenu" Foreground="#FF5C99D6" ScrollViewer.HorizontalScrollBarVisibility="Disabled" SelectionChanged="ListViewMenu_SelectionChanged">
                    <ListViewItem x:Name="ItemFilterBooks" Height="60">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FilterOutline" Height="30" Width="30" Margin="9 7 0 0" Foreground="White"/>
                            <TextBlock Text="Filter books" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center" Margin="20 10" Foreground="White"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem x:Name="ItemMyFavorites" Height="60">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FavoriteCheckOutline" Height="30" Width="30" Margin="9 7 0 0" Foreground="White"/>
                            <TextBlock Text="My favorites" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center" Margin="20 10" Foreground="White"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem x:Name="ItemMyOrders" Height="60">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="OrderNumericDescending" Height="30" Width="30" Margin="9 7 0 0" Foreground="White"/>
                            <TextBlock Text="My orders" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center" Margin="20 10" Foreground="White"/>
                        </StackPanel>
                    </ListViewItem>
                </ListView>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
    
